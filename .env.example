# --- DeepSeek API ---
DEEPSEEK_API_KEY=sk-xxxxxxxx
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_TEMPERATURE=0.8
DEEPSEEK_MAX_TOKENS=2048
DEEPSEEK_SUMMARY_TOKENS=512
SYSTEM_PROMPT=你是 QQ 群的智能助手，保持礼貌、简洁，拒绝违法违规和敏感内容。

# --- OneBot / QQ Gateway ---
ONEBOT_WS_URL=ws://napcat:3001
ONEBOT_PROTOCOL=ws
ONEBOT_ACCESS_TOKEN=
BOT_SELF_ID=123456789
BOT_NAME=DeepSeek QQ Bot
BOT_PREFIX=/

# --- Permissions & safety ---
ADMIN_IDS=123456789
ALLOWLIST=
DENYLIST=
WHITELIST_MODE=false
BLOCKED_PATTERNS=
ALLOW_GROUP_PLAIN=false

# --- Rate limit ---
USER_RATE_LIMIT=8
GROUP_RATE_LIMIT=40
GLOBAL_RATE_LIMIT=120

# --- Conversation ---
MAX_CONTEXT_MESSAGES=12
SUMMARY_TRIGGER=10

# --- Runtime ---
PORT=5140
DATA_DIR=/app/data
ENABLE_CONSOLE=false
CONSOLE_PORT=5300

# --- NapCat helper (host-side UID/GID) ---
NAPCAT_UID=1000
NAPCAT_GID=1000
